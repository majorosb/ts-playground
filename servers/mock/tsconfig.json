{
    "compilerOptions": {
        "lib": ["ES2020"],
        "module": "CommonJS",
        "target": "ES2020",
        "jsx": "preserve",
        "sourceMap": true,
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "exactOptionalPropertyTypes": true,
        "typeRoots": [
            "node_modules/@types",
            "src/custom-typings"
        ],
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/@types/*",
                "src/custom-typings/*",
                "./*"
            ],
            "app/*": ["../../*"],
        }
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}